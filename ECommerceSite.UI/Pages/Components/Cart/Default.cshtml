@model IEnumerable<ECommerceSite.Application.Cart.GetCart.Response>

@{

}
    <p class="title has-text-centered">Cart</p>
    <table class="table is-fullwidth is-striped">
        <thead>
            <tr>
                <th style="text-align: center;">Product</th>
                <th style="text-align: center;">Quantity</th>
                <th style="text-align: center;">Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td style="text-align: center; vertical-align: middle;">@product.Name</td>
                <td style="text-align: center; vertical-align: middle;">@product.Quantity</td>
                <td style="text-align: center; vertical-align: middle;">@product.TotalValue</td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td style="text-align: center; vertical-align: middle;">Sub-Total</td>
                <td style="text-align: center; vertical-align: middle;"><vc:cart view="Small"></vc:cart></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align: center; vertical-align: middle;">Shipping</td>
                <td style="text-align: center; vertical-align: middle;">???</td>
            </tr>
            <tr>
                <td></td>
                <td style="font-weight: bold; text-align: center; vertical-align: middle;">Total</td>
                <td style="font-weight: bold; text-align: center; vertical-align: middle;">???</td>
            </tr>
        </tfoot>
    </table>